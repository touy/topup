	$scope.register={};	
	$scope.isnew=false;
	$scope.isedit=false;
	$scope.isshakehands=false;
	$scope.heartbeats=null;

	var messege={
                _isstring:false,
                json:{},
                updatetime:new Date(),
                _iserror:true,
                _isread:false,
                actioncode:"error"};
    
    $scope.initMessege=function(data){
    	data=JSON.parse(data);
    	if(data._iserror||data._isread||data.actioncode=="error")
    		return false;
    	return true;
    };
	
	ws.$emit('shakehands',$scope.client); // send a message to the websocket server

	ws.$on('$open', function () {
            console.log('socket open!');
        });

        ws.$on('shakehands', function (data) {
            
            var response;
            try {
                if (angular.isString(event.data)) {
                    response=JSON.parse(event.data);
                }
                else if (angular.isObject(event.data)) {
                    response=event.data;
                }
                if($scope.initMessege(response))
                {
                	$scope.client=response.json;	
                }
                else
                {
                	$scope.errors=response.json;
                }
                
            } catch (e) {
                $("#infomsg").html("Sorry, connection failed ...");
                //console.log('error:'+ e);
                response = {'error': e,updatetime:new Date(),_isstring:false,_iserror:true,_isread:false};
            }
            //ws.$close();
        });

        ws.$on('heartbeats',function (data){
        	$scope.heartbeats=data;
        	//ws.$close();
        });

        ws.$on('$error',function(data){
        	console.log("error %s",data);
        	//ws.$close();
        });

        ws.$on('$close', function () {
            console.log('websocket closed');
        });

        $setTimeout(function() {
        	if($scope.isshakehands)
        		//ws.emit("heartbeats",$scope.client);
        	$scope.sendHeartbeats();
        }, 5000);





